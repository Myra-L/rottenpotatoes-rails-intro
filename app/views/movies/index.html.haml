-#  This file is app/views/movies/index.html.haml
%h2 All Movies

//create the link on movie title and release date 
//that links gets passed to a controller, which then feeds the view what it needs
//to make the webpage. 
//So... sort the list of movies before it gets passed to the view. 
%table#movies.table.table-striped.col-md-12
  %thead
    %tr
      %th{:id => "title_header", :class => @title_header}
        =link_to "Movie Title", movies_path({:sort => :title})
      %th Rating
      %th{:id => "release_date_header", :class => @release_date_header}
        =link_to "Release Date", movies_path({:sort => :release_date})
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
